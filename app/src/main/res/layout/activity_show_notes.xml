<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tenet.pia.notes.ShowNotesActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bkg">

            <ImageButton
                android:id="@+id/btn_return"
                android:layout_width="26dp"
                android:layout_height="15dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/return_icon" />

            <TextView
                android:id="@+id/header_text"
                style="@style/headerTextStyle_CN"
                android:layout_below="@id/btn_return"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:text="记事本" />

            <TextView
                android:id="@+id/header_text_en"
                style="@style/headerTextStyle_EN"
                android:layout_below="@id/header_text"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="22dp"
                android:text="NOTEBOOK" />

            <ListView
                android:id="@+id/Lv_sn"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_text_en"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:dividerHeight="28.5dp"
                android:divider="@null"
                >
            </ListView>

        </RelativeLayout>
        <ImageButton
            android:layout_width="86dp"
            android:layout_height="82dp"
            android:background="@drawable/add_btn_bkg"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="18dp"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
