<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tenet.pia.group.GroupContactsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkg"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/return_icon"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/return_icon" />
        <TextView
            android:id="@+id/group_name"
            style="@style/headerTextStyle_CN"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="20dp"
            android:text="群组名字" />
        <TextView
            android:id="@+id/group_contact"
            style="@style/headerTextStyle_EN"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:text="GROUP CONTACTS"
            />
        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:layout_gravity="top|right"
            style="@style/btnTextStyle"
            android:background="@null"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="26dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/col" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">

            <ListView
                android:id="@+id/Lv_gc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerHeight="30dp"
                android:divider="@null" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
