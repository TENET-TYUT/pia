<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:orientation="vertical"
    tools:context=".schedule.AddScheduleActivity">

    <ImageButton
        android:id="@+id/return_icon"
        android:layout_width="25.5dp"
        android:layout_height="15dp"
        android:layout_marginLeft="36.75dp"
        android:layout_marginTop="32.75dp"
        android:background="@drawable/return_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:orientation="vertical">

        <TextView
            style="@style/headerTextStyle_CN"
            android:layout_gravity="center_horizontal"
            android:text="编辑日程"
            tools:ignore="MissingConstraints" />

        <TextView
            style="@style/headerTextStyle_EN"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="EDIT DATE" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:background="@drawable/shade"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/listItemTextStyle"
                android:layout_marginLeft="13dp"
                android:text="标题:" />

            <EditText
                android:id="@+id/title"
                style="@style/listItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shade"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/listItemTextStyle"
                android:layout_marginLeft="13dp"
                android:text="描述:" />

            <EditText
                android:id="@+id/des"
                style="@style/listItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shade"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/listItemTextStyle"
                android:layout_marginLeft="13dp"
                android:text="地点:" />

            <EditText
                android:id="@+id/location"
                style="@style/listItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shade"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/listItemTextStyle"
                android:layout_marginLeft="13dp"
                android:text="选择日期:" />

            <TextView
                android:id="@+id/choose_date"
                style="@style/listItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shade"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/listItemTextStyle"
                android:layout_marginLeft="13dp"
                android:text="开始时间:" />

            <TextView
                android:id="@+id/start_time"
                style="@style/listItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shade"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/listItemTextStyle"
                android:layout_marginLeft="13dp"
                android:text="结束时间:" />

            <TextView
                android:id="@+id/end_time"
                style="@style/listItemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:background="@null" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/confirm_btn"
            style="@style/btnTextStyle"
            android:background="@null"
            android:layout_marginRight="40dp"
            android:text="确 定" />
        <Button
            android:id="@+id/delete_btn"
            style="@style/btnTextStyle"
            android:background="@null"
            android:text="删 除" />
    </LinearLayout>

</LinearLayout>