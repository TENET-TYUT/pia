<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacts.ContactsInfoActivity"
    android:background="@drawable/bkg"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="25.5dp"
        android:layout_height="15dp"
        android:background="@drawable/return_icon"
        android:layout_marginLeft="27.5dp"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/contact_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/contact_photo"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="78dp"/>

    <TextView
        android:id="@+id/XM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.姓名|同学"
        android:textSize="31dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="52dp"
        android:textColor="#111111"/>

    <TextView
        android:id="@+id/DH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX XXXX XXXX"
        android:textSize="31dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="52dp"
        android:textColor="#111111"/>

    <TextView
        android:id="@+id/YJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX@XXXX"
        android:textSize="31dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="52dp"
        android:textColor="#111111"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/SC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="110dp"
            android:text="删除"
            android:textSize="31dp"
            android:background="#00000000"/>

        <Button
            android:id="@+id/BJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/SC"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="110dp"
            android:text="编辑"
            android:textSize="31dp"
            android:background="#00000000"/>

    </LinearLayout>


</LinearLayout>