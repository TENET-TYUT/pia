<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacts.ContactsInfoActivity"
    android:background="@drawable/bkg"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ci_return"
        android:layout_width="25.5dp"
        android:layout_height="15dp"
        android:background="@drawable/return_icon"
        android:layout_marginLeft="27.5dp"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/contact_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/contact_photo"
        android:layout_gravity="center"
        android:layout_marginTop="78dp"/>

    <TextView
        android:id="@+id/XM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.姓名"
        android:textSize="31dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="52dp"
        android:textColor="#111111"/>

    <TextView
        android:id="@+id/DH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX XXXX XXXX"
        android:textSize="31dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="52dp"
        android:textColor="#111111"/>

    <TextView
        android:id="@+id/YJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX@XXXX"
        android:textSize="31dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="52dp"
        android:textColor="#111111"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="70dp">
        <Button
            android:id="@+id/delete"
            style="@style/btnTextStyle"
            android:text="删除"
            android:background="@null"/>

        <Button
            android:id="@+id/edit"
            style="@style/btnTextStyle"
            android:background="@null"
            android:layout_marginLeft="70dp"
            android:text="编辑" />

    </LinearLayout>


</LinearLayout>